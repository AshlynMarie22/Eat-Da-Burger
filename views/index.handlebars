<div class="container"></div>
<div class="row">
  <div class="col-sm-5"></div>
  <div class="col-sm-2" id="burgerimg">
    <img class="burgerimage"
      src="https://ashlynimages.s3.us-east-2.amazonaws.com/cartoon-tasty-big-hamburger-with-cheese-sesame-seeds_75817-125.png"
      alt="hamburger">
  </div>
<div class="col-sm-5"></div>
</div>
<div class="row">
  <div class="col-sm-12">
    <h1>Eat-Da-Burger!</h1>
  </div>
</div>


<div class="row">

  <div class="col-sm">
    <h3>Burgers to eat!</h3>

    <ol type="1.">
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devour=true}}
      {{/unless}}
      {{/each}}
    </ol>
  </div>
  <div class="col-sm">
    <h3>Add a Burger</h3>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>

      <div class="form-group">
        <label for="devoured"></label>
        {{!-- <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Awake --}}
      </div>
      <div class="submitbtn">
        <button class="btn btn-light" for="devoured" type="submit" name="devoured" value="0" checked>Add Burger</button>
      </div>
    </form>
  </div>
  <div class="col-sm">
    <h3>Devoured burgers!</h3>

    <ol type="1.">
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devour=false}}
      {{/if}}
      {{/each}}
    </ol>
  </div>
</div>
</div>