<div class="container"></div>
<div class="row center">
  <div class="col-sm-12">
    <h1>Burgers!</h1>
  </div>

</div>


<div class="row">

  <div class="col-sm">
    <h3>Burgers that are not devoured!</h3>

    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devour=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col-sm">
    <h3>Add a Burger</h3>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>

      <div class="form-group">
        <label for="devoured"></label><br>
        {{!-- <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Awake --}}
      </div>

      <button for="devoured" type="submit" name="devoured" value="0" checked>Add Burger</button>
    </form>
  </div>
  <div class="col-sm">
    <h3>Burgers that are devoured!</h3>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devour=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>
</div>